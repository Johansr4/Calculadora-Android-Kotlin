<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="8">

        <Button
            android:id="@+id/buttonPrueba4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:layout_margin="3dp"
            android:text="CE"
            android:backgroundTint="@color/Light_Green"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/buttonPrueba3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:layout_margin="3dp"
            android:text="C"
            android:backgroundTint="@color/Light_Green"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <ImageButton
            android:id="@+id/buttonPruebaImagen"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"

            android:backgroundTint="@color/Light_Green"
            android:onClick="calcularRaiz"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/raiz_cuadrada" />

        <ImageButton
            android:id="@+id/buttonPruebaImagen2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:text="^"


            android:backgroundTint="@color/Light_Green"
            android:onClick="clicOperacion"
            android:scaleType="fitCenter"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp"
            android:src="@drawable/matematicas" />



        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:onClick="presionarNumero"
            android:text="7"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:onClick="presionarNumero"
            android:text="8"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button15"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:onClick="presionarNumero"
            android:text="9"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button16"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="clicOperacion"
            android:text="X"
            android:backgroundTint="@color/Light_Green"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button17"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:onClick="presionarNumero"
            android:text="4"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button18"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:onClick="presionarNumero"
            android:text="5"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button19"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:onClick="presionarNumero"
            android:text="6"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button20"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="clicOperacion"
            android:text="-"
            android:backgroundTint="@color/Light_Green"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button22"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:onClick="presionarNumero"
            android:text="1"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button23"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:onClick="presionarNumero"
            android:text="2"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button24"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:onClick="presionarNumero"
            android:text="3"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button25"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="6"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="clicOperacion"
            android:text="+"
            android:backgroundTint="@color/Light_Green"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button26"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:onClick="presionarNumero"
            android:text="."
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button27"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:onClick="seleccionarNumero"
            android:text="0"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button21"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="7"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:text="="
            android:backgroundTint="@color/Light_Green"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/buttonDividir"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="7"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="clicOperacion"
            android:text="/"
            android:backgroundTint="@color/Light_Green"
            android:textColor="@color/Green"
            android:textSize="24sp"
            app:strokeColor="@color/Green"
            app:strokeWidth="2dp" />

    </GridLayout>
</LinearLayout>
